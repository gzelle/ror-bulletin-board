<!DOCTYPE html>
<html>
  <head>
    <title>BulletinBoard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
	  <div class="container">
	    <div class="navbar-header">
	      <%= link_to 'Bulletin Board System', root_path, class: 'navbar-brand' %>
	    </div>
	    <div id="navbar">
		  <% if signed_in? %>
		    <ul class="nav navbar-nav">
		    	<% if signed_in? %>
		    		<% unless !current_user.administrator? %>
		    		<li><%= link_to 'Users', users_path %></li>
		    		<li><%= link_to 'Boards', users_path %></li>
		    		<% end %>
		    	<% end %>
		    </ul>
		  <% end %>

		  <ul class="nav navbar-nav pull-right">
		    <% if signed_in? %>
		      <li>Hello <%= current_user.name %></li>
		      <li><%= link_to 'View Profile', user_path(current_user) %></li>
		      <li><%= link_to 'Log out', sign_out_path, method: :delete %></li>
		    <% else %>
		      <li><%= link_to 'Log in', sign_in_path %></li>
		      <li><%= link_to 'Sign up', sign_up_path %></li>
		    <% end %>
		  </ul>
		</div>
	  </div>
	</nav>

	<div class="container">
	  <% flash.each do |key, value| %>
	    <div class="alert alert-<%= key %>">
	      <%= value %>
	    </div>
	  <% end %>

	  <%= yield %>
	</div>
  </body>
</html>
