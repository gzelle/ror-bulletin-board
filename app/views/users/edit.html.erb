<%= form_with(model: @user, local: true, html: { multipart: true }) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :avatar %><br>
    <%= form.file_field :avatar %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :about %>
    <%= form.text_area :about %>
  </div>

  <div class="field">
    <%= form.label :birthdate %>
    <%= form.date_field :birthdate %>
  </div>

  <div class="field">
    <%= form.label :hometown %>
    <%= form.text_field :hometown %>
  </div>

  <div class="field">
    <%= form.label :present_location %>
    <%= form.text_field :present_location %>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label :gender %><br>
      <%= form.select :gender, User.genders.keys.to_a, class:"custom-select" %>
    </div>

    <div class="form-group col-md-8"">
      <%= form.label :birthdate %>
      <%= form.date_field :birthdate, required: true, class:"form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :skype %>
      <%= form.text_field :skype, class:"form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :website %>
      <%= form.text_field :website, placeholder: "https://", class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :interests %>
    <%= form.text_area :interests, class:"form-control" %>
  </div>

  <div class="submit-field">
	<%= form.submit %>
  </div>
<% end %>

