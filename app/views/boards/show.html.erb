<p id="notice"><%= notice %></p>

<p>
  <strong>Board:</strong>
  <%= @board.name %>
  <br>
  <strong>Description:</strong>
  <%= @board.description %>
  <br>
  <strong>Threads: </strong><%= @board.thread_count%>, 
  <strong>Posts: </strong>
</p>
    
    <% boardthreads = @board.sortthreads(0) %>  <!--sort sticky threads -->
    <% boardthreads.each do |bthread| %> 
      <tr>
        <td>üìç <%= link_to bthread.title, bthread %></td>
      </tr>
      <br>
    <% end %>
    
    <br>
    <% boardthreads = @board.sortthreads(1) %>  <!--sort nonsticky threads -->
    <% boardthreads = boardthreads.paginate(page: params[:page], per_page: 20) %>
    <% boardthreads.each do |bthread| %>
      <% if bthread.nonsticky? %>
        <tr>
          <td><%= link_to bthread.title, bthread %></td>
        </tr>
        <br>
      <% end %>
    <% end %>
    <%= will_paginate boardthreads %><br>

