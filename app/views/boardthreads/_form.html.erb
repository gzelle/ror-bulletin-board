<%= form_for(@boardthread, url: { action: yield(:action) }) do |form| %>
  <% if boardthread.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(boardthread.errors.count, "error") %> prohibited this boardthread from being saved:</h2>

      <ul>
      <% boardthread.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-md-4">
      <%= form.label :title %>
      <%= form.text_field :title, id: :boardthread_title, class:"form-control" %>
    </div>

    <div class="form-row">
      <div class="form-group col-md-4">
        <%= form.label :status %>
        <%= form.select :status, Boardthread.statuses.keys.to_a, class:"form-control" %>
      </div>

      <div class="form-group col-md-8"">
        <%= form.label :threadtype %>
        <%= form.select :threadtype, Boardthread.threadtypes.keys.to_a, class:"form-control" %>
      </div>
    </div>
  </div>

  <% if action_name == "new" %>
    <% action = "Create Thread" %>
  <% elsif action_name == "edit" %>
    <% action = "Update Thread" %>
  <% end %>
  <div class="form-group">
    <%= form.submit "#{action}", class: "btn btn-primary" %>
  </div>

<% end %>
