<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @topic.name %>
</p>
    <% boards = @topic.boards %>
    <% boards.each do |board| %>
      <div class="card">
        <div class="card-body">
          <tr>
            <td><%= image_tag board.photo.thumb.url unless board.photo.blank? %></td>
            <td><%= link_to board.name, board %></td>
            <td><%= board.thread_count %></td>
            <td></td>
          </tr>
        </div>
      </div>
      <br>
    <% end %>

<% if current_user.administrator? %>
  <%= link_to 'Add New Board', new_topic_board_path(@topic, @board) %> |
  <%= link_to 'Edit', edit_topic_path(@topic) %> |
<% end %>
<%= link_to 'Back', topics_path %>
