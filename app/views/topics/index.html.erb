<p id="notice"><%= notice %></p>
<% if current_user.administrator? %>
  <%= link_to 'New Topic', new_topic_path, class: "btn btn-primary" %>
<% end %>

<div class="container">
  <% @topics.each do |topic| %>
    <div class="row">
      <h2 class="topic-title"><%= link_to topic.name, topic %></h2>
      <hr>
    </div>
    <div class="row">
      <% boards = topic.boards %>
      <% boards.each do |board| %>
        <div class="col-md-2 col-md-2-board">
          <div class="board">
            <td><%= image_tag board.photo.thumb.url unless board.photo.blank? %></td>
            <h5><%= link_to board.name, board %></h5>
            <div class="tooltip">
              <%= board.description %><br>
              <b>Threads: </b><%= board.thread_count ? board.thread_count : 0 %><br>
              <b>Posts: </b><%= board.postcount ? board.postcount : 0 %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<br>
<br>


